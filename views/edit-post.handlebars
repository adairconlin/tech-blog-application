<article>
    <h2 class="dasboard-title myFont-sans">Edit Post</h2>

    <form class="edit-post-form">
        <div>
            <input name="post-title" type="text" class="post-title myFont-sans sans-medium" value="{{post.title}}" />
        </div>
        <div>
            {{post.vote_count}} {{post.vote_count}} by you on {{post.created_at}}
            |
            <a href=="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
        </div>
        <button type="submit">Save Post</button>
        <button type="button" class="delete-post-btn">Delete Post</button>
    </form>

    <form class="comment-form">
        <div>
            <textarea name="comment-body" class="cut-out"></textarea>
        </div>
        <div class="add-comment-btn-div">
            <button type="submit" class="add-comment-btn">add comment</button>
        </div>
        
        {{> comments post.comments }}
    </form>
</article>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>